# GCP Production Environment Configuration
# Copy this to .env and fill in your values
# NOTE: In production, use GCP Secret Manager for sensitive values

# ==================== GCP Configuration ====================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# ==================== Database (Cloud SQL) ====================
# Option 1: Use Cloud SQL Python Connector (recommended)
USE_CLOUD_SQL_CONNECTOR=true
CLOUD_SQL_INSTANCE_CONNECTION_NAME=your-project:us-central1:your-instance
DB_USER=postgres
DB_PASS=  # Store in Secret Manager as 'db-password'
DB_NAME=whytheybuy

# Option 2: Direct connection URL (for local development or proxy)
# DATABASE_URL=postgresql://user:password@localhost:5432/whytheybuy

# ==================== Redis (Cloud Memorystore) ====================
# Option 1: Component-based (recommended for Memorystore)
REDIS_HOST=10.0.0.1  # Your Memorystore private IP
REDIS_PORT=6379
REDIS_PASSWORD=  # If using AUTH

# Option 2: Direct URL
# REDIS_URL=redis://10.0.0.1:6379/0

# ==================== CORS Configuration ====================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==================== App Configuration ====================
DEBUG=false
APP_NAME=WhyTheyBuy
APP_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# ==================== Authentication ====================
# Store in Secret Manager as 'jwt-secret-key'
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== AI Configuration ====================
AI_PROVIDER=gemini
AI_MODEL=gemini-3-flash-preview #gemini-2.0-flash
GEMINI_MODEL=gemini-3-flash-preview #gemini-2.0-flash
# Store in Secret Manager as 'gemini-api-key'
GEMINI_API_KEY=

# Fallback providers (optional)
# Store in Secret Manager as 'openai-api-key'
OPENAI_API_KEY=
# Store in Secret Manager as 'anthropic-api-key'
ANTHROPIC_API_KEY=

# ==================== Stripe Payments ====================
# Store in Secret Manager as 'stripe-secret-key'
STRIPE_SECRET_KEY=
# Store in Secret Manager as 'stripe-webhook-secret'
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxxxx
STRIPE_PRICE_ID_PRO_YEARLY=price_xxxxx

# ==================== Email (SendGrid) ====================
# Store in Secret Manager as 'sendgrid-api-key'
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# ==================== Market Data APIs ====================
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
FINNHUB_API_KEY=

# ==================== Cloud Storage ====================
GCS_BUCKET_NAME=your-bucket-name

# ==================== Rate Limiting ====================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
